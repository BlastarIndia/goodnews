<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/pref_other">
    <ListPreference
            android:key="share_content"
            android:title="@string/pref_share_content"
            android:summary="@string/pref_share_content_summary"
            android:dialogTitle="@string/pref_share_content_choice_title"
            android:entries="@array/pref_share_content_choice"
            android:entryValues="@array/pref_share_content_choice_values"
            android:defaultValue="@string/pref_share_content_choice_value_url_only"/>
    <CheckBoxPreference
            android:key="check_for_internet_connection"
            android:title="@string/pref_check_for_internet_connection"
            android:summary="@string/pref_check_for_internet_connection_summary"
            android:defaultValue="false"/>
    <Preference
            android:key="item_blacklist_reset"
            android:title="@string/pref_item_blacklist_reset"
            android:summary="@string/pref_item_blacklist_reset_summary"/>

    <PreferenceCategory
            android:title="@string/pref_confirmations"
            android:key="confirmations_mark_read">
        <CheckBoxPreference
                android:key="confirmations_mark_read_in_item_list"
                android:title="@string/pref_confirmations_mark_read_in_item_list"
                android:summary="@string/pref_confirmations_mark_read_in_item_list_summary"
                android:defaultValue="false"/>
        <CheckBoxPreference
                android:key="confirmations_mark_read_in_feed_list"
                android:title="@string/pref_confirmations_mark_read_in_feed_list"
                android:summary="@string/pref_confirmations_mark_read_in_feed_list_summary"
                android:defaultValue="true"/>
        <CheckBoxPreference
                android:key="confirmations_mark_read_in_tag_list"
                android:title="@string/pref_confirmations_mark_read_in_tag_list"
                android:summary="@string/pref_confirmations_mark_read_in_tag_list_summary"
                android:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>
