<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_row"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/ListItem"
        >
    <include layout="@layout/divider"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <ToggleButton
                    android:id="@+id/button_read"
                    style="@style/ItemToggleButton"
                    android:layout_gravity="top"
                    android:drawableLeft="?attr/readToggleIcon"/>
            <Button
                    android:id="@+id/indicator_offline"
                    style="@style/ItemToggleButton"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:drawableLeft="@drawable/ic_indicator_offline_content_none_light"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:paddingTop="@dimen/space_small"
                android:paddingBottom="@dimen/space_small"
                >
            <TextView
                    android:id="@+id/item_row_feed_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/Label.Subtitle"
                    />
            <TextView
                    android:id="@+id/item_row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    style="@style/ListItemLabel"
                    android:textColor="?attr/themeTextColorPrimary"
                    />
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|left"
                        style="@style/Label.Subtitle"
                        />
                <TextView
                        android:id="@+id/labels"
                        style="@style/Label.Subtitle"
                        android:textAppearance="?attr/textAppearanceTagList"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:ellipsize="marquee"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/teaser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textAppearance="?attr/textAppearanceArticleSubtitle"
                    />

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/space"
                >
            <ToggleButton
                    android:id="@+id/button_starred"
                    style="@style/ItemToggleButton.Right"
                    android:layout_gravity="top"
                    android:drawableRight="?attr/starredToggleIcon"/>
            <ToggleButton
                    android:id="@+id/button_readlist"
                    style="@style/ItemToggleButton.Right"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:drawableRight="?attr/readlistToggleIcon"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
